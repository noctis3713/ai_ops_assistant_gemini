# AI 網路運維助理 - 環境變數配置範本
# 複製此檔案為 .env 並填入實際的配置值

# =============================================================================
# AI 服務配置
# =============================================================================
# AI 提供者選擇: gemini 或 claude
AI_PROVIDER=gemini

# Google Gemini AI API 金鑰
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Anthropic Claude AI API 金鑰  
ANTHROPIC_API_KEY=your_anthropic_claude_api_key_here

# AI 模型配置
GEMINI_MODEL=gemini-1.5-flash-latest
CLAUDE_MODEL=claude-3-haiku-20240307

# =============================================================================
# 功能開關
# =============================================================================
# 啟用文檔搜尋功能 (需要 ddgs 套件)
ENABLE_DOCUMENT_SEARCH=false

# 解析器版本選擇
PARSER_VERSION=original

# =============================================================================
# 系統管理配置
# =============================================================================
# 管理 API 金鑰 (用於系統管理功能)
ADMIN_API_KEY=admin123

# 提示詞語言設定
PROMPT_LANGUAGE=zh_TW

# 提示詞模板目錄路徑
PROMPT_TEMPLATE_DIR=/app/templates/prompts

# =============================================================================
# 網路連線配置
# =============================================================================
# 設備連線超時時間 (秒)
DEVICE_CONNECTION_TIMEOUT=30

# 指令執行超時時間 (秒)
COMMAND_EXECUTION_TIMEOUT=20

# 最大併發連線數
MAX_CONCURRENT_CONNECTIONS=5

# =============================================================================
# 日誌系統配置
# =============================================================================
# 日誌級別: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 啟用詳細日誌輸出
ENABLE_VERBOSE_LOGGING=false

# =============================================================================
# Docker 部署環境變數
# =============================================================================
# HTTPS 端口 (生產環境)
HTTPS_PORT=443

# 代理管理介面端口
PROXY_ADMIN_PORT=81

# 資料路徑配置
PROXY_DATA_PATH=./proxy-data
SSL_PATH=./letsencrypt  
LOGS_PATH=./logs
CONFIG_PATH=./WEB_APP/backend/config

# 建構日期 (自動填入)
BUILD_DATE=

# =============================================================================
# 前端配置
# =============================================================================
# 前端 API 基礎 URL
VITE_API_BASE_URL=http://localhost:8000

# 環境模式: development, production
VITE_ENVIRONMENT=production

# =============================================================================
# Nginx 配置 (生產環境)
# =============================================================================
# Nginx Worker 程序數
NGINX_WORKER_PROCESSES=auto

# Nginx Worker 連線數
NGINX_WORKER_CONNECTIONS=1024

# =============================================================================
# 安全和認證配置
# =============================================================================
# 設備 SSH 認證資訊 (在 config/devices.json 中配置)
# DEVICE_USERNAME=your_device_username
# DEVICE_PASSWORD=your_device_password

# =============================================================================
# 效能調優配置
# =============================================================================
# FastAPI Workers 數量 (生產環境)
# FASTAPI_WORKERS=4

# Python 記憶體優化
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# =============================================================================
# 開發環境特定配置
# =============================================================================
# 開發環境啟用自動重載
# FASTAPI_RELOAD=true

# 開發環境暴露端口
# DEV_BACKEND_PORT=8000
# DEV_FRONTEND_PORT=5173

# =============================================================================
# 資料庫配置 (如果需要)
# =============================================================================
# PostgreSQL 資料庫配置
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_ops
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ai_ops
# DB_USER=ai_ops_user
# DB_PASSWORD=your_db_password

# =============================================================================
# 快取配置 (如果需要)
# =============================================================================
# Redis 快取配置
# REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# =============================================================================
# 監控和告警配置 (如果需要)
# =============================================================================
# 應用監控配置
# MONITORING_ENABLED=false
# METRICS_PORT=9090

# 郵件告警配置
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# ALERT_EMAIL=admin@your-domain.com